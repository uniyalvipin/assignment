<h1>
    Hotel details
</h1>
<table class="table table-striped table-dark table-hover">
  <thead>
    <tr>
      <th>User Name</th>
      <th>Hotel Name</th>
      <th>Address</th>
      <th>Date</th>
      <th>Time</th>
      <th>No of guests</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @u.user_name %></td>
        <td><%= @b.h_name %></td>
        <td><%= @h.address %></td>
        <td><%= @b.b_date %></td>
        <td><%= @b.b_time %></td>
        <td><%= @b.no_of_booking %></td>
      </tr>
  </tbody>
</table>

<div class="container">
    <div class="row">
        <div class="col-4">
            <b>Press delete to delete your booking.</b>
        </div>
        <div class="col">
            <%= link_to "Delete", bookings_delete_path, method: :delete, class: "btn btn-danger" %>
        </div>
    </div>
  </div>